<div class="container">
    <div class="content">
        <!-- ユーザー登録エリア -->
        <div class="main">
            <%= form_for @user, url: sign_up_path do |f| %>
            <p>ニックネーム</p>
            <%= f.text_field :name, placeholder: '渡辺はるか' %>
            <p>メールアドレス</p>
            <%= f.email_field :email, placeholder: 'haruka@codecamp.jp'  %>
            <p>パスワード</p>
            <%= f.password_field :password, placeholder: '8文字以上の英数字' %>
            <p>パスワード(確認)</p>
            <%= f.password_field :password_confirmation, placeholder: '確認用' %>
            <%= f.submit '登録する' %>
            <% end %>
        </div>
        <!-- 詳細検索エリア -->
        <%= render partial: 'markets/search_area' %>
    </div>
</div>
