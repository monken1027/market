<!DOCTYPE html>
<html>
  <head>
    <title>Market</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="header_area">
        <!-- アイコン、ロゴ -->
        <div class="icon">
          <%= link_to markets_path do %>
            <%= image_tag 'icon.png' %>
          <% end%>
        </div>
        <%= link_to markets_path do %>
        <h1 class="logo">Market</h1>
        <% end %>
        <!-- 検索フォーム -->
        <%= form_with scope: :search, url: markets_path, class:"search", method: :get, local: true do |f| %>
          <%= f.text_field :keyword, placeholder: 'キーワードから検索' %>
          <%= image_submit_tag 'search.png', class: 'search_icon' %>
        <% end %>
        <!-- 出品する -->
        <div class="button_products_new">
          <%= link_to '出品する', products_new_path %>
        </div>
        <!-- マイページ -->
        <div class="mypage">
          <%= link_to profiles_path do %>
            <%= image_tag 'mypage.png' %>
            <p>マイページ</p>
          <% end %>
        </div>
      </div>
    </header>
    <% flash.each do |type, message| %>
    <div class="alert alert-<%= type %>"><%= message %></div>
    <% end %>
    <%= yield %>
    <footer>
      <div class="footer_menu">
         <ul type="none">
             <li><a href="#">プライバシーポリシー</a></li>
             <li><a href="#">特定商取引に基づく表示</a></li>
             <li><a href="#">利用規約</a></li>
             <li><a href="#">サイトマップ</a></li>
         </ul>
      </div>
    </footer>
    <script>
        window.setTimeout(function() {
            $(".alert").slideUp();
        }, 3000);
    </script>
  </body>
</html>
